{
  "name": "keywords-mcp",
  "version": "1.0.0",
  "description": "Keywords AI 的 MCP 服务器 - 支持 HTTP 流式传输和本地 stdio 模式",
  "main": "dist/lib/index.js",
  "type": "module",
  "bin": {
    "keywords-mcp": "dist/lib/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "stdio": "npm run build && node dist/lib/index.js",
    "start": "node dist/lib/index.js",
    "clean": "rm -rf dist"
  },
  "usage": {
    "mode1_public_http": {
      "description": "方案 A：部署一次，客户通过 URL 参数传递 API Key",
      "deploy": "vercel deploy --prod",
      "url": "https://your-project.vercel.app/api/mcp?apikey=YOUR_KEY",
      "auth": "URL 参数: apikey"
    },
    "mode2_private_deployment": {
      "description": "方案 B：客户自行部署，API Key 存在 Vercel 环境变量中",
      "deploy": "vercel deploy --prod",
      "env": "KEYWORDS_API_KEY (在 Vercel Dashboard 设置)",
      "url": "https://customer-project.vercel.app/api/mcp"
    },
    "mode3_local_stdio": {
      "description": "方案 C：在 Cursor/Claude Desktop 本地通过 stdio 运行",
      "command": "node {项目绝对路径}/dist/lib/index.js",
      "config": "先运行 npm run build，并在环境变量中设置 KEYWORDS_API_KEY"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "mcp-handler": "^1.0.4",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vercel/node": "^5.5.16",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}